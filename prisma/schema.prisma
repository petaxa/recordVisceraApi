// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int              @id @default(autoincrement())
  email         String           @unique
  name          String
  password      String
  authCode      String
  verified      Int              @default(0)
  bowelMovement Bowel_Movement[]
  userTemp      User_Temp[]
  userWeight    User_Weight[]
  profile       Profile?
  createdAt     DateTime         @default(dbgenerated("NOW()")) @db.DateTime
  updatedAt     DateTime         @default(dbgenerated("NOW() ON UPDATE NOW()")) @db.DateTime

  @@map("users")
}

model Profile {
  id        Int       @id @default(autoincrement())
  sex       Int?
  height    Float?
  birthday  DateTime? @db.Date
  user      User      @relation(fields: [userId], references: [id])
  userId    Int       @unique
  createdAt DateTime  @default(dbgenerated("NOW()")) @db.DateTime
  updatedAt DateTime  @default(dbgenerated("NOW() ON UPDATE NOW()")) @db.DateTime

  @@map("profiles")
}

model User_Temp {
  id        Int      @id @default(autoincrement())
  date      DateTime
  temp      Float
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(dbgenerated("NOW()")) @db.DateTime
  updatedAt DateTime @default(dbgenerated("NOW() ON UPDATE NOW()")) @db.DateTime

  @@map("user_temps")
}

model User_Weight {
  id        Int      @id @default(autoincrement())
  date      DateTime
  weight    Float
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(dbgenerated("NOW()")) @db.DateTime
  updatedAt DateTime @default(dbgenerated("NOW() ON UPDATE NOW()")) @db.DateTime

  @@map("user_weights")
}

model Bowel_Movement {
  id                 Int                 @id @default(autoincrement())
  date               DateTime
  blood              Int
  drainage           Int
  note               String?
  user               User                @relation(fields: [userId], references: [id])
  userId             Int
  bristolStoolScales Bristol_Stool_Scale @relation(fields: [scaleId], references: [id])
  scaleId            Int
  createdAt          DateTime            @default(dbgenerated("NOW()")) @db.DateTime
  updatedAt          DateTime            @default(dbgenerated("NOW() ON UPDATE NOW()")) @db.DateTime

  @@map("bowel_movements")
}

model Bristol_Stool_Scale {
  id            Int              @id @default(autoincrement())
  typeName      String           @unique
  bowelMovement Bowel_Movement[]

  @@map("bristol_stool_scales")
}
